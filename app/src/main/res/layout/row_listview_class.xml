<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorClass"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/img_icon_class"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/light_gold_icon"
            ></ImageView>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="9"
            android:textColor="#FFFFFF"
            android:background="@color/colorClassNumber"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:layout_marginLeft="7dp">
            <TextView
                android:id="@+id/tv_name_class"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="Ánh sáng"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_num_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:gravity="center"
                    ></TextView>
                <TextView
                    android:id="@+id/tv_num_2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:gravity="center"
                    ></TextView>
                <TextView
                    android:id="@+id/tv_num_3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>